@model IEnumerable<Actor>
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-8 offset-2">
        <table class="table table-striped">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=>model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model=>model.FullName)</th>
                    <th>@Html.DisplayNameFor(model=>model.Bio)</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@a.ProfilePictureURL" alt="@a.FullName" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model=>a.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model=>a.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@a.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@a.Id"><i class="bi bi-eye-fill"></i>Details</a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@a.Id"><i class="bi bi-trash3-fill"></i>Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<hr />


@await Html.PartialAsync("_CreateItem", "Actors")